    <!--    ADDED SCENARIO (only 1 can be run at a time, the others are commented out-->
    <!-- Announcer Bean -->
    <bean id="announcer" class="learn.battle.announcers.ProperAnnouncer"/>

    <!-- Location Beans -->
    <bean id="coconutGrove" class="learn.battle.environment.Location">
        <constructor-arg value="Coconut Grove"/>
    </bean>

    <bean id="holyMountain" class="learn.battle.environment.Location">
        <constructor-arg value="Holy Mountain"/>
    </bean>

    <bean id="skyValley" class="learn.battle.environment.Location">
        <constructor-arg value="Sky Valley"/>
    </bean>

    <!-- Fighter Beans -->
    <bean id="murio" class="learn.battle.fighters.Fighter" scope="prototype">
        <constructor-arg value="Murio"/>
    </bean>

    <bean id="louisG" class="learn.battle.fighters.Fighter" scope="prototype">
        <constructor-arg value="Louis G."/>
    </bean>

    <bean id="princessPreach" class="learn.battle.fighters.Fighter" scope="prototype">
        <constructor-arg value="Princess Preach"/>
    </bean>

    <bean id="wagglywoof" class="learn.battle.fighters.Fighter" scope="prototype">
        <constructor-arg value="Wagglywoof"/>
    </bean>

    <bean id="drCaravan" class="learn.battle.fighters.Fighter" scope="prototype">
        <constructor-arg value="Dr. Caravan"/>
    </bean>

    <bean id="pentagram" class="learn.battle.fighters.Fighter" scope="prototype">
        <constructor-arg value="Pentagram"/>
    </bean>

    <!-- Battle Scenario 1 -->
    <bean id="battleAtHolyMountain" class="learn.battle.environment.Battle">
        <constructor-arg ref="holyMountain"/>
        <constructor-arg>
            <list>
                <ref bean="murio"/>
                <ref bean="drCaravan"/>
                <ref bean="wagglywoof"/>
            </list>
        </constructor-arg>
        <property name="announcer" ref="announcer"/>
    </bean>
